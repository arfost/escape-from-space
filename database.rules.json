{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "users": {
      ".indexOn": ["game"]
    },
    "games": {
      ".indexOn": ["status"],
      "$gameId": {
        "chat": {
          ".indexOn": ["date"]
        },
        "cells":{
          ".indexOn": ["pos"]
        },
        "players":{
          ".indexOn": ["pos"]
        },
        "items":{
          ".indexOn": ["pos"]
        }
      }
    },
    "lobby": {
      "chat": {
        ".indexOn": ["date"]
      }
    }
  }
}